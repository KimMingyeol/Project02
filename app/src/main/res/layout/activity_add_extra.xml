    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이제 마지막 단계입니다!"
        android:textAlignment="center"
        android:padding="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="여행 이름을 정해주세요"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        android:layout_gravity="center"
        android:gravity="center">

        <EditText
            android:id="@+id/tripTitleEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="나의"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray"
            android:textColorHighlight="@color/white"
            android:textColorLink="@color/white"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/font_custom"
            android:textSize="25sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여행"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="같이 여행 갈 친구를 선택해주세요"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:textSize="20sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selected_friend_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addFriendBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_layout2"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginRight="30dp"
            android:textSize="18sp"
            android:text="추가"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/completeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_layout2"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="완료"/>
    </LinearLayout>


</LinearLayout>